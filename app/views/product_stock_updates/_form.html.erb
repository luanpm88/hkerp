<div class="row">
            <div class="col-md-12">
              <div class="grid simple">
                <div class="grid-title no-border">
                  <h4>Product <span class="semi-bold">Details</span></h4>
                  <div class="tools"> <a href="javascript:;" class="collapse"></a> <a href="#grid-config" data-toggle="modal" class="config"></a> <a href="javascript:;" class="reload"></a> <a href="javascript:;" class="remove"></a> </div>
                </div>     
                
                
                
                
                <div class="grid-body no-border">
                  
                  
                  
                        <% if @product_stock_update.errors.any? %>
                          <div class="alert alert-error">
                            <button data-dismiss="alert" class="close"></button>
                            <div id="error_explanation">
                              <h5><%= pluralize(@product_stock_update.errors.count, "error") %> prohibited this product from being saved:</h5>
                        
                              <ul>
                              <% @product_stock_update.errors.full_messages.each do |msg| %>
                                <li><%= msg %></li>
                              <% end %>
                              </ul>
                            </div>
                          </div>
                        <% end %>
                        
                        
                        
                  <%= form_for(@product_stock_update) do |f| %>
                  <% if params[:tab_page] %>
						 <%= hidden_field_tag "tab_page", 1 %>
					<% end %>
                    <div class="row column-seperation">
                           
                            <div class="col-md-6">
                                
                                
                                <div class="form-group">
                                    <label class="form-label"><%= f.label :product %></label>
                                    <div class="input-with-icon  right">                                       
                                        <i class=""></i>
                                        <%= f.hidden_field :product_id %>
                                        <strong><%= @product.display_name %></strong>
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="form-label"><%= f.label :type %></label>
                                    <span class="help">(required)</span>
                                    <div class="input-with-icon  right">                                       
                                        <i class=""></i>
                                        <select class="modern_select required" name="product_stock_update[is_import]">
                                          <option <% if @product_stock_update.is_import == 1 %>selected="selected"<% end %> value="1">Import</option>
                                          <option <% if @product_stock_update.is_import == 0 %>selected="selected"<% end %> value="0">Export</option>
                                        </select>
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="form-label"><%= f.label :import_quantity %></label>
                                    <span class="help">(required)</span>
                                    <div class="input-with-icon  right">                                       
                                        <i class=""></i>
                                        <%= f.text_field :quantity, :class => "form-control number_input required" %>
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="form-label"><%= f.label :serial_numbers %></label>
                                    <span class="help"></span>
                                    <div class="input-with-icon  right">                                       
                                        <i class=""></i>
                                        <%= f.text_area :serial_numbers, :class => "form-control" %>
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="form-label"><%= f.label :note %></label>
                                    <span class="help">required</span>
                                    <div class="input-with-icon  right">                                       
                                        <i class=""></i>
                                        <%= f.text_field :note, :class => "form-control required" %>
                                    </div>
                                </div>
                                
                                
                                
                                
                            </div>
                    
                    </div>
                    
                    <div class="form-actions">  
                                  <div class="pull-right">
                                    <button type="submit" class="btn btn-success btn-cons"><i class="icon-ok"></i> Save</button>
                                    <%= link_to 'Cancel', products_path, :class => "btn btn-white btn-cons" %>
                                  </div>
                                </div>
                  
                  <% end %>
                  
                </div>
              </div>
            </div>
</div>