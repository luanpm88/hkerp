                <ul class="breadcrumb">
                    <li>
                        <p>YOU ARE HERE</p>
                    </li> 
                    <li><%= link_to 'Products', products_url, :class => "active" %></li>
                </ul>
                <div class="page-title">
                        <i class="icon-archive"></i>
                    	<h3>Product - <span class="semi-bold"> Management</span></h3>	
                </div>
                <div class="row">
                    <div class="col-md-12">
			<%= link_to 'New Product', new_product_path, :class => 'btn btn-primary btn-cons' %>
                        <div class="grid simple ">
                            <div class="grid-title no-border">
                                <h4>Listing  <span class="semi-bold">Products</span></h4>
                                <div class="tools">
				    
				    <a href="javascript:;" class="collapse"></a>
                                    <a href="#grid-config" data-toggle="modal" class="config"></a>
				    <a href="javascript:;" class="reload"></a>
				    <a href="javascript:;" class="remove"></a>
                                    
                                </div>
                            </div>
                            <div class="grid-body no-border">
                                 
                                    <table class="table table-striped no-more-tables">
                                        <thead>
                                            <tr>
                                                <th style="width:1%" >
                                                    <div class="checkbox check-default">
							<input id="checkbox10" type="checkbox" value="1" class="checkall">
							<label for="checkbox10"></label>
						    </div>
                                                </th>
                                                <th style="width:70%">Name</th>
                                                
                                                <th style="width:16%;text-align: right">Price (VNƒê)</th>
                                                <th style="width: 115px;">Action</th>   
                                            </tr>
                                        </thead>
                                        <tbody>
					    <% @products.each do |product| %>
                                              <tr>
                                                <td class="v-align-middle">
							<div class="checkbox check-default">
							    <input id="checkbox11" type="checkbox" value="1">
							    <label for="checkbox11"></label>
							</div>
						</td>
                                                <td><%= product.display_name %></td>
                                                
                                                <td style="text-align: right"><%= product.formated_price %></td>
                                                <td>
							<%= link_to '<i class="icon-zoom-in"></i>'.html_safe, product, :class => "btn btn-success btn-xs btn-mini tmp_hide" %>
							<%= link_to '<i class="icon-paste"></i>'.html_safe, edit_product_path(product), :class => "btn btn-info btn-xs btn-mini" %>							
							<%= link_to 'X', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-xs btn-mini" %>
						</td>
                                              </tr>
                                            <% end %>
                                            
                                        </tbody>
                                    </table>
                            </div>
                        </div>
			
                    </div>
                </div>
