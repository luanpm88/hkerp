                <ul class="breadcrumb">
                    <li>
                        <p>YOU ARE HERE</p>
                    </li> 
                    <li><%= link_to 'Products', products_url, :class => "active" %></li>
                </ul>
                <div class="page-title">
                        <i class="icon-archive"></i>
                    	<h3>Product - <span class="semi-bold"> Management</span></h3>	
                </div>
                <div class="row">
                    <div class="col-md-9">
			<%= link_to 'New Product', new_product_path, :class => 'btn btn-primary btn-cons' %>
                        <div class="grid simple ">
                            <div class="grid-title no-border">
                                <h4>Listing  <span class="semi-bold">Products</span></h4>
                                <div class="tools">
				    
				    <a href="javascript:;" class="collapse"></a>
                                    <a href="#grid-config" data-toggle="modal" class="config"></a>
				    <a href="javascript:;" class="reload"></a>
				    <a href="javascript:;" class="remove"></a>
                                    
                                </div>
                            </div>
                            <div class="grid-body no-border">
                                 
                                    <table class="table table-striped no-more-tables datatable-products no-filter">
                                        <thead>
                                            <tr>                                                
												<th>Cat</th>
												<th>Manu</th>
                                                <th>Name</th>
												<th>Sup.Price</th>
                                                <th>Price</th>
												<th>Stock</th>
                                                <th>Action</th>   
                                            </tr>
                                        </thead>                                        
                                    </table>
                            </div>
                        </div>
			
                    </div>
		    <div class="col-md-3">
			<div class="grid simple ">
			    <div class="grid-body no-border filters">
				<h3>Filters</h3>
				<h4>Category<br /><span class="filter-cat-clear">Clear select</span></h4>
				<p style="margin-bottom: 20px">
				    <select class="modern_select" style="width:100%" name="category">
					<option value="">All category</option>
					<optgroup label="Categories">
					<% Category.all.each do |category| %>
					   <% if category.children == [] %>
						<option value="<%= category.id %>"><%= category.name %></option>
					   <% end %>
					<% end %>
					</optgroup>
				    </select>
				</p>
				<h4>Manufacturers<br /><span class="filter-manu-clear">Clear select</span></h4>
				<div class="filter-manu-scroll">
				    <ul class="filter">
					<% Manufacturer.all.order(:name).each do |manufacturer| %>
					    <li>
						<div class="checkbox check-success">
						    <input id="manu_checkbox<%= manufacturer.id %>" type="checkbox" value="<%= manufacturer.id %>" name="manufacturers[]" />
						    <label for="manu_checkbox<%= manufacturer.id %>"><%= manufacturer.name %></label>
						</div>
					    </li>
					<% end %>
				    </ul>
				</div>
			    </div>
			</div>
		    </div>
                </div>
