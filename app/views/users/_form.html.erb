       <div class="row">
            <div class="col-md-12">
              <div class="grid simple">
                <div class="grid-title no-border">
                  <h4>Category <span class="semi-bold">Details</span></h4>
                  <div class="tools"> <a href="javascript:;" class="collapse"></a> <a href="#grid-config" data-toggle="modal" class="config"></a> <a href="javascript:;" class="reload"></a> <a href="javascript:;" class="remove"></a> </div>
                </div>     
                
                
                
                
                <div class="grid-body no-border">
                  
                  
                  <% if @user.errors.any? %>
                    <div class="alert alert-error">
                      <button data-dismiss="alert" class="close"></button>
                      <div id="error_explanation">
                        <h5><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h5>
                  
                        <ul>
                        <% @user.errors.full_messages.each do |msg| %>
                          <li><%= msg %></li>
                        <% end %>
                        </ul>
                      </div>
                    </div>
                  <% end %>
                    
                 
                  
                  
                  <%= form_for(@user, html: { multipart: true }) do |f| %>

					<div class="row column-seperation">
						 <div class="col-md-6">
							  <div class="form-group">
								   <label class="form-label"><%= f.label :image %></label>
								   <span class="help">(required)</span>
								   <div class="right">                                       
									   <i class=""></i>
									   <!--<div class="nice"><%= f.file_field :image %></div>-->
									   
										<ul id="sortable" class="image-boxes">
											 
											 <li class="image-box ui-state-default">
												  <div class="img-actions">
													   <i class="icon-minus-sign delete-but<% if !@user.image.present? %> hidden<% end %>"></i>
												  </div>
												  <a href="#" class="">
													   <% if @user.image.present? %>
															<img class="current_img current_image_pic" src="<%= @user.avatar(:square2x) %>" />
													   <% end %>
													   <i class="icon-picture current_img current_image_icon<% if @user.image.present? %> hidden<% end %>"></i>
													   <img src="" class="new_picture hidden" />										
												  </a>
												  <%= f.file_field :image, :class => "hidden" %>
											 </li>
					 
										</ul>
										<br style="clear:both" />
								   </div>
							   </div>
							  
							  <div class="form-group">
								<label class="form-label"><%= f.label :first_name %></label>
								<span class="help">(required)</span>
								<div class="input-with-icon  right">                                       
									<i class=""></i>
									  <%= f.text_field :first_name, :class => "form-control" %>
								</div>
							  </div>
							  
							  <div class="form-group">
								<label class="form-label"><%= f.label :last_name %></label>
								<span class="help">(required)</span>
								<div class="input-with-icon  right">                                       
									<i class=""></i>
									  <%= f.text_field :last_name, :class => "form-control" %>
								</div>
							  </div>
							  
							  <div class="form-group">
								<label class="form-label"><%= f.label :email %></label>
								<span class="help">(required)</span>
								<div class="input-with-icon  right">                                       
									<i class=""></i>
									  <%= f.text_field :email, :class => "form-control" %>
								</div>
							  </div>
							  
							  <div class="form-group">
								<label class="form-label"><%= f.label :mobile %></label>
								<span class="help"></span>
								<div class="input-with-icon  right">                                       
									<i class=""></i>
									  <%= f.text_field :mobile, :class => "form-control" %>
								</div>
							  </div>
							  
							  <div class="form-group">
								<label class="form-label"><%= f.label :ATT_No %></label>
								<span class="help">(required)</span>
								<div class="input-with-icon  right">                                       
									<i class=""></i>
									  <%= f.text_field :ATT_No, :class => "form-control" %>
								</div>
							  </div>
								   
							  <div class="form-group">
								<label class="form-label"><%= f.label :password %></label>
								<span class="help">(required)</span>
								<div class="input-with-icon  right">                                       
									<i class=""></i>
																<%= f.password_field :password, :class => "form-control",  :autocomplete => "off" %>
								</div>
							  </div>
							  
							  <div class="form-group">
								<label class="form-label"><%= f.label :password_confirmation %></label>
								<span class="help">(required)</span>
								<div class="input-with-icon  right">                                       
									<i class=""></i>
																<%= f.password_field :password_confirmation, :class => "form-control" %>
								</div>
							  </div>
							  
							  
							  
						 </div>
						 
						 <div class="col-md-6">
							  <div class="form-group">
								<label class="form-label"><%= f.label :roles %></label>
								<span class="help"></span>
								<div class="input-with-icon  right">                                       
									<i class=""></i>
																<% Role.all.each do |role| %>
																  <div class="row-fluid">
																	<div class="checkbox check-info">
																	  <%= check_box_tag 'user[role_ids][]', role.id, @user.roles.include?(role), :id => "role_#{role.id}" %>
																	  <%= f.label role.name, :for => "role_#{role.id}" %>
																	</div>
																  </div>
																<% end %>
								</div>
							  </div>
						 </div>
						 
					</div>
						 
					<div class="form-actions">  
						 <div class="pull-right">
						 <button type="submit" class="btn btn-success btn-cons"><i class="icon-ok"></i> Save</button>
											 <%= link_to 'Cancel', users_path, :class => "btn btn-white btn-cons" %>
					   </div>
					</div>
							  
						<% end %>
			   </div>
			 </div>
            </div>
			
      </div>



