<meta http-equiv="content-type" content="text/html; charset=utf-8" />

<%
list_path = "#"
if !@payment_record.order.nil?
	list_path = @payment_record.order.is_purchase ? url_for(controller: "accounting", action: "orders", purchase: true) : url_for(controller: "accounting", action: "orders")
end

		
%>

<%= stylesheet_link_tag "print_html.css" %>


<div class="show_order_page">
  
		<div class="order_histories" style="float: right">
		<%= link_to 'Create PDF', download_pdf_payment_records_path(:id => @payment_record.id, :export_ticket => params[:export_ticket]), :class => "btn btn-info btn-xs btn-mini", :target => "_blank" %>
	  
		</div>
		
<% if !@payment_record.order.nil? %>
		
		<div class="order_histories" style="float: left; max-width: 640px">
		  
		  <% @order.all_order_payments.each do |d| %>
			<%
			  active = d.id == @payment_record.id ? "success" : "white"      
			%>
			
			<div class="print_group">
			  
			  <%= link_to d.display_name, {:id => d.id}, :class => "btn btn-#{active} btn-xs btn-mini fancybox.iframe show_order" %>
			  
			</div>
		
		  <% end %>
		
		  <% @order.all_tip_payments.each do |d| %>
			<%
			  active = d.id == @payment_record.id ? "success" : "white"      
			%>
			
			<div class="print_group">
			  
			  <%= link_to "[Tip] "+d.display_name, {:id => d.id}, :class => "btn btn-#{active} btn-xs btn-mini fancybox.iframe show_order" %>
			  
			</div>
		
		<% end %>
		
			  <% if can? :read_commissions, @order %>
				  <% @order.all_commission_payments.each do |d| %>
					<%
					  active = d.id == @payment_record.id ? "success" : "white"      
					%>
					
					<div class="print_group">
					  
					  <%= link_to "[Commission] "+d.display_name, {:id => d.id}, :class => "btn btn-#{active} btn-xs btn-mini fancybox.iframe show_order" %>
					  
					</div>
				
				  <% end %>
		<% end %>
		
		
		</div>
<% end %>		
		
		
		<br style="clear: both" />
		
		
		
		<div style="overflow: auto">
		
			  <%= render 'show' %>
		</div>
		  
		<br style="clear: both" />



		<div class="order_histories" style="float: right;margin: 10px 0 0 0">
		  <%= link_to 'Create PDF', download_pdf_payment_records_path(:id => @payment_record.id, :export_ticket => params[:export_ticket]), :class => "btn btn-info btn-xs btn-mini", :target => "_blank" %>
		  <%= link_to 'X Trash'.html_safe, {controller: "payment_records", action: "trash", :id => @payment_record.id}, :class => "btn btn-info btn-xs btn-mini" %>
		</div>
		
		
</div>
