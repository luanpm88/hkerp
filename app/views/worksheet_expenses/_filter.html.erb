				  </div>
				  <% end %>
			  </div>
			  <div class="row order-filters">
				  
				<div class="col-md-2">
					<h4>Actions</h4>
					<div class="">
						<div class="input-with-icon  right">                                       
							<i class=""></i>
							<select name="actions_by" class="modern_select width100">
							  <option value="">None</option>
							  <option value="delete">Delete</option>
							</select>
						</div>
					</div>
				</div>
				
			  </div>
		    </div>		    
		</div>