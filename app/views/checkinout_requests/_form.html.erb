
       <div class="row">
            <div class="col-md-8">
              <div class="grid simple">
                <div class="grid-title no-border">
                  <h4>Attendance <span class="semi-bold">Details</span></h4>
                  <div class="tools"> <a href="javascript:;" class="collapse"></a> <a href="#grid-config" data-toggle="modal" class="config"></a> <a href="javascript:;" class="reload"></a> <a href="javascript:;" class="remove"></a> </div>
                </div>     
                
                
                
                
                <div class="grid-body no-border">
                  
                  
                  <% if @checkinout_request.errors.any? %>
                    <div class="alert alert-error">
                      <button data-dismiss="alert" class="close"></button>
                      <div id="error_explanation">
                        <h5><%= pluralize(@checkinout_request.errors.count, "error") %> prohibited this request from being saved:</h5>
                  
                        <ul>
                        <% @checkinout_request.errors.full_messages.each do |msg| %>
                          <li><%= msg %></li>
                        <% end %>
                        </ul>
                      </div>
                    </div>
                  <% end %>
                    

                  <%= form_for(@checkinout_request) do |f| %>
                           
                      <div class="form-group">
                        <label class="form-label">User</label>
                        <span class="help"></span>
						<div class="input-with-icon  right">                                       
							<i class=""></i>
                                                        <h5><strong><%= @checkinout_request.user.name %></strong></h5>                                                        
						</div>
                      </div>                     
                      
                      <div class="form-group check-time">
                        <label class="form-label">Check time  (on <%= @checkinout_request.check_time.to_date %>)</label>
                        <span class="help">(required)</span>
						<div class="input-with-icon  right">                                       
							<i class=""></i>
                                                        <%= f.datetime_select :check_time %>                                                        
						</div>
                      </div>
                      
                      <div class="form-group check-time">
                        <label class="form-label">Reason</label>
                        <span class="help">(required)</span>
						<div class="input-with-icon  right">                                       
							<i class=""></i>
                                                        <%= f.text_area :content %>                                                
						</div>
                      </div>
                      
                      
				  <div class="form-actions">  
					<div class="pull-right">
					  <button type="submit" class="btn btn-success btn-cons"><i class="icon-ok"></i> Save</button>
                                          <a href="javascript:history.back()" class="btn btn-white btn-cons">Cancel</a>
					</div>
					</div>
				<% end %>
                </div>
              </div>
            </div>		
      </div>
