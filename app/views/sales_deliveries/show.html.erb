<meta http-equiv="content-type" content="text/html; charset=utf-8" />

<%= stylesheet_link_tag "print_html.css" %>

<div class="order_histories" style="float: right">
<%= link_to 'Create PDF', download_pdf_sales_deliveries_path(:id => @sales_delivery.id), :class => "btn btn-info btn-xs btn-mini", :target => "_blank" %>
  
</div>

<div class="order_histories" style="float: left; max-width: 640px">
  <% @order.sales_deliveries.each do |d| %>
    <% if d.id == @sales_delivery.id %>
      <%= link_to d.created_at.strftime("%d/%m/%Y %H:%M:%S"), d, :class => "btn btn-success btn-xs btn-mini fancybox.iframe show_order" %>
    <% else %>
      <%= link_to d.created_at.strftime("%d/%m/%Y %H:%M:%S"), d, :class => "btn btn-white btn-xs btn-mini fancybox.iframe show_order" %>
    <% end %>
  <% end %>
</div>

<br style="clear: both" />
<%= render 'show' %>
<br style="clear: both" />

<div class="order_histories" style="float: right;margin: 10px 0 0 0">
  <%= link_to 'Create PDF', download_pdf_orders_path(:id => @order.id), :class => "btn btn-info btn-xs btn-mini", :target => "_blank" %>
  
</div>
