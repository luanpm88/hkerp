
		 <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

		 
                 <div class="row">                  
		 <div class="form-group col-md-10">
            <label class="form-label"><%= f.label :email %></label>
            <div class="controls">
				<div class="input-with-icon  right">                                       
					<i class=""></i>
					<%= f.email_field :email, :autofocus => true, :class => "form-control" %>
				</div>
            </div>
          </div>
          </div>
                 
		  <div class="row">
          <div class="form-group col-md-10">
            <label class="form-label"><%= f.label :password %></label>
            <span class="help"></span>
            <div class="controls">
				<div class="input-with-icon  right">                                       
					<i class=""></i>
					<%= f.password_field :password, :class => "form-control" %>
				</div>
            </div>
          </div>
          </div>
                  
		  <div class="row">
                    
                    
              <div class="control-group  col-md-10">
                <div class="checkbox checkbox check-success"> <!--<a href="#">
                Trouble login in?</a>&nbsp;&nbsp;-->
                
                <% if devise_mapping.rememberable? -%>
                  <%= f.check_box :remember_me %> <%= f.label :remember_me %>
                <% end -%>
                  
                </div>
              </div>
          </div>
          <div class="row">
            <div class="col-md-10">
              <%= f.submit "Sign in", :class => "btn btn-primary btn-cons pull-right" %>              
            </div>
          </div>
<% end %>

<%= render "devise/shared/links" %>
