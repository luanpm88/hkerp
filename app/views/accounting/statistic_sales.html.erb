                <ul class="breadcrumb">
                    <li>
                        <p>YOU ARE HERE</p>
                    </li> 
                    <li>
			<%= link_to 'Accounting', {controller: "accounting", action: "index"} %>
                    </li>
		    
                </ul>
                <div class="page-title">	<i class="icon-folder-open"></i>

                    	<h3>Acounting - <span class="semi-bold"> Statistics</span></h3>	
                </div>
                <div class="row">
                    <div class="col-md-12">
			
					<div class="grid simple ">
						<div class="grid-body no-border filters" method="get">
						<form id="accounting-statistics-filters-form" action="<%= url_for({controller: "accounting", action: "statistic_sales"})%>">
							<div class="row accounting-statistics-filters">
								<div class="col-md-3">
									<h4>From Date</h4>
									<div class="date_select_filter">
									<div class="input-with-icon  right">
										<div class="input-append success date col-md-10 no-padding">
											<%= text_field_tag :from_date, @from_date.strftime("%Y-%m-%d"), :class => "datetime form-control" %>
											<span class="add-on"><span class="arrow"></span><i class="icon-th"></i></span>
										</div>
										<br style="clear: both" />
										
									</div>
									</div>
								</div>
								<div class="col-md-3">
									<h4>To Date</h4>
									<div class="date_select_filter">
									<div class="input-with-icon  right">
										<div class="input-append success date col-md-10 no-padding">
											<%= text_field_tag :to_date, @to_date.strftime("%Y-%m-%d"), :class => "datetime form-control" %>
											<span class="add-on"><span class="arrow"></span><i class="icon-th"></i></span>
										</div>
										<br style="clear: both" />
									</div>
									</div>
								</div>
								
									<div class="col-md-3">
										<h4>Customer</h4>
										<div class="">
											<div class="input-with-icon  right">                                       
											<i class=""></i>
											<input style="width:100%;margin-bottom: 5px;" name="customer_id" url="<%= contacts_path(format: "json") %>" class="select2-ajax-customers" value="<%= @customer.id  if !@customer.nil? %>" text="<%= @customer.name if !@customer.nil? %>" data-placeholder="All"/>
											</div>
										</div>
									</div>
											
											<div class="col-md-2">
													<h4>Paid Status</h4>
													<div class="">
														<div class="input-with-icon  right">                                       
															<i class=""></i>
															<select name="paid_status" class="modern_select width100">
																<option value="">All</option>
																<option <%= 'selected="selected"' if params[:paid_status].present? && params[:paid_status] == "paid" %> value="not_paid">Not Paid</option>
																<option <%= 'selected="selected"' if params[:paid_status].present? && params[:paid_status] == "paid" %> value="paid">Paid</option>
															</select>
														</div>
													</div>
											</div>

							</div>
						</form>
						</div>		    
					</div>
			
			
			
                    
			
			<%= link_to '<i class="icon-print"></i> Print'.html_safe, {controller: "accounting", action: "statistic_sales", pdf: 1, from_date: @from_date.strftime("%Y-%m-%d"), to_date: @to_date.strftime("%Y-%m-%d"), customer_id: params[:customer_id]}, :class => 'btn btn-primary btn-cons', target: "_blank" %>
			
			<div class="grid simple ">
			    <div class="grid-body no-border filters" method="get">
					<h4>Sales Statistics - <span class="semi-bold"><%= @from_date.strftime("%Y-%m-%d") %> -> <%= @to_date.strftime("%Y-%m-%d") %></span></h4>
					
					<%= render 'statistic_table' %>
					
				</div>
			</div>
			
			
			
			
			<div class="grid simple ">
			    <div class="grid-title no-border">
                                <h4>Statistics in/on - <span class="semi-bold"><%= @from_date.strftime("%Y-%m-%d") %> -> <%= @to_date.strftime("%Y-%m-%d") %></span></h4>
                                <div class="tools">
				    
				    <a href="javascript:;" class="collapse"></a>
                                    <a href="#grid-config" data-toggle="modal" class="config"></a>
				    <a href="javascript:;" class="reload"></a>
				    <a href="javascript:;" class="remove"></a>
                                    
                                </div>
                            </div>
                            <div class="grid-body no-border statistics-content">
				<div class="row">
				    <div class="col-md-4">
					<h5>Total Sell</h5>
					<h2><%= @statistics[:total_sell] %></h2>
				    </div>
				    
				    <div class="col-md-4">
					<h5>Total Sell + VAT</h5>
					<h2><%= @statistics[:total_sell_with_vat] %></h2>
				    </div>
				    
				    <div class="col-md-4">
					<h5>Total VAT (sell)</h5>
					<h2><%= @statistics[:total_vat_sell] %></h2>
				    </div>
				    
				    <div class="col-md-4">
					<h5>Total Buy</h5>
					<h2><%= @statistics[:total_buy] %></h2>
				    </div>
				    
				    <div class="col-md-4">
					<h5>Total Buy + VAT</h5>
					<h2><%= @statistics[:total_buy_with_vat] %></h2>
				    </div>
				    
				    <div class="col-md-4">
					<h5>Total VAT (Buy)</h5>
					<h2><%= @statistics[:total_vat_buy] %></h2>
				    </div>
					
					<div class="col-md-4">
					<h5>Payment Recieved</h5>
					<h2><%= @statistics[:payment_recieved] %></h2>
				    </div>
					
					<div class="col-md-4">
					<h5>Payment Recieved + VAT</h5>
					<h2><%= @statistics[:payment_recieved_vat] %></h2>
				    </div>
					
					<div class="col-md-4">
					<h5>Payment VAT (Recieved)</h5>
					<h2><%= @statistics[:payment_vat_recieved] %></h2>
				    </div>
					
					<div class="col-md-4">
					<h5>Payment Paid</h5>
					<h2><%= @statistics[:payment_paid] %></h2>
				    </div>
					
					<div class="col-md-4">
					<h5>Payment Paid + VAT</h5>
					<h2><%= @statistics[:payment_paid_vat] %></h2>
				    </div>
					
					<div class="col-md-4">
					<h5>Payment VAT (Paid)</h5>
					<h2><%= @statistics[:payment_vat_paid] %></h2>
				    </div>
				</div>
			    </div>
			</div>
			
			
			
			
			</div>
                </div>

<script>
    $(document).ready(function() {
		$(".date_select_filter select").select2();
    });
</script>