<h1>Listing delivery_details</h1>

<table>
  <thead>
    <tr>
      <th>Delivery</th>
      <th>Order detail</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @delivery_details.each do |delivery_detail| %>
      <tr>
        <td><%= delivery_detail.delivery_id %></td>
        <td><%= delivery_detail.order_detail_id %></td>
        <td><%= delivery_detail.quantity %></td>
        <td><%= link_to 'Show', delivery_detail %></td>
        <td><%= link_to 'Edit', edit_delivery_detail_path(delivery_detail) %></td>
        <td><%= link_to 'Destroy', delivery_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

