<meta http-equiv="content-type" content="text/html; charset=utf-8" />

<style>
  .page * {
    font-family: "Times New Roman";
    font-size: 12px;
  }  
  .cominfo h2 {
    font-size: 16px;
    margin-bottom: 0;
  }
  p {
    margin-bottom: 5px;
    margin-top: 0;
  }
  .cominfo img {
    width: 105px !important;
    margin-top: -5px !important;
  }
  .top-info {
    margin-top: 20px;
  }
  .top-info h1 {
    font-size: 24px;
    margin-bottom: 0;
  }
  .top-info h3 {
      font-size: 14px;
      margin-top: 5px;
  }
  .maintitle {
    width: 70%;
    padding-bottom: 20px !important;
  }
  
  .mid label {
        display: block;
        float: left;
        font-weight: 700;
        padding-right: 10px;
        text-align: right;
        width: 100px;
        margin-left: -100px;
    }
    .mid p {
        clear: both;
        padding-left: 100px;
        min-height: 16px;
    }
  
  .middle2 label {
    margin-left: -140px;
    width: 140px;
  }
  .middle2 p {
    padding-left: 140px;
  }
  
  .middle3 label {
    margin-left: -80px;
    width: 80px;
  }
  .middle3 p {
    padding-left: 80px;
  }
  
  .list {
    width: 100%;
    margin-top: 20px;
    border-left: 1px solid #000000;
    border-top: 1px solid #000000;
    border-bottom: none;
    border-right: none;
  }
  .list th {
      background: none repeat scroll 0 0 #EFEFEF;
      border-bottom: 1px solid #000000;
      border-right: 1px solid #000000;
      border-top: none;
      border-left: none;
      padding: 5px;
  }
  .list td {
      border-bottom: 1px solid #000000;
      border-right: 1px solid #000000;
      border-top: none;
      border-left: none;
      padding: 5px;
      text-align: center;
      font-size: 14px;
  }
  .paid-box label {
    display: block;
    float: left;
    height: 20px;
    width: 130px;
  }
  .point2 {
    float: right;
  }
  table {
    width: 100%;
}
</style>


<% if params[:export_ticket].present? %>
  <%= render 'export_ticket' %>
<% else %>
  <%= render 'show' %>
<% end %>