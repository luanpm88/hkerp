                <ul class="breadcrumb">
                    <li>
                        <p>YOU ARE HERE</p>
                    </li> 
                    <li>Delivery</li>
                </ul>
                <div class="page-title">
                        <i class="icon-archive"></i>
                    	<h3>Storage - <span class="semi-bold"> <%= @order.is_purchase ? "Purchase" : "Sales" %> Edit Delivery</span></h3>
                </div>
                <div class="row">
                    <div class="col-md-12">			
                        <div class="grid simple ">
                            <div class="grid-title no-border">
                                <h4>Order:  <span class="semi-bold"><%= @order.quotation_code %></span></h4>
				<h4><%= @order.is_purchase ? "Supplier" : "Customer" %>:
				    <span class="semi-bold">
					<%= @order.is_purchase ? @order.supplier.name : @order.customer.name %>
				    </span>
				</h4>
                                <div class="tools">
				    
				    <a href="javascript:;" class="collapse"></a>
                                    <a href="#grid-config" data-toggle="modal" class="config"></a>
				    <a href="javascript:;" class="reload"></a>
				    <a href="javascript:;" class="remove"></a>
                                    
                                </div>
                            </div>
                            <div class="grid-body no-border">
				
				<% if @delivery.errors.any? %>
				    <div class="alert alert-error">
				      <button data-dismiss="alert" class="close"></button>
				      <div id="error_explanation">
					<h5><%= pluralize(@delivery.errors.count, "error") %> prohibited this delivery from being saved:</h5>
				  
					<ul>
					<% @delivery.errors.full_messages.each do |msg| %>
					  <li><%= msg %></li>
					<% end %>
					</ul>
				      </div>
				    </div>
				<% end %>
				
				
                                
				    
				    
				
          
                  
                  
                                  <%= form_for(@delivery) do |f| %>
                                    <table class="table table-striped no-more-tables no-filter">
                                        <thead>
                                            <tr>                                                
                                              <th>Item</th>
                                              <th class="text-center">Quantity</th>
                                              <th>Serial Numbers</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% @delivery.delivery_details.each do |line| %>
                                            <tr class="quantity-<%= line.quantity %>">
                                                <td>                                                
                                                  <%= line.order_detail.product_name %><br />
                                                  <%= line.order_detail.product_description %>
                                                </td>
                                                
                                                <td class="text-center">                                                
                                                  <%= line.quantity %>
                                                </td>
                                                
                                                <td>
                                                  <%= text_area_tag "delivery_lines[#{line.id}][serial_numbers]", line.serial_numbers %>
                                                </td>
                                                
                                                
                                            </tr>
                                            <% end %>
                                            
                                            
                                            
                                        </tbody>
                                    </table>
                                    <br />
                                    <br />
                                    <div class="text-right">
                                        <input name="save" type="submit" class="btn btn-primary btn-cons" value="Confirm" />
                                    </div>
                                  <% end %>
                  
                  
                  
                
                

                            
                            
                                  
                            </div>
                        </div>
			
                    </div>
		    
                </div>
