                          <span class="help"></span>
                          <div class="input-with-icon  right">                                       
                            <i class=""></i>
                            <%= f.text_field :buyer_name, :class => "form-control" %>
                          </div>
                        </div>
                        
                        <div class="form-group">
                          <label class="form-label"><%= f.label :buyer_company %></label>
                          <span class="help"></span>
                          <div class="input-with-icon  right">                                       
                            <i class=""></i>
