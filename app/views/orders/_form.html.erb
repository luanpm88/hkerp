                                    <option value="">Select Method</option>
                                    <% PaymentMethod.all.each do |payment| %>
                                        <option value="<%= payment.id %>" <% if !@order.payment_method_id.nil? && @order.payment_method_id == payment.id %>selected="selected"<% end %>>
                                          <%= payment.name %>
                                        </option>
                                    <% end %>
                                  </select>
                                  </div>
                              </div>
                            
                            </div>
                        
                        
                    </div>
                
                    <div class="row column-seperation">
                      <div class="col-md-6">
                        
                        <div class="form-group">
