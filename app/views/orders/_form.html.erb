                                <span class="help"></span>
                                  <div class="input-with-icon  right">                                       
                                    <i class=""></i>
                                    <select name="order[tax_id]" class="modern_select" style="min-width: 400px;">                                    
                                    <% Tax.all(:order => "created_at DESC").each do |tax| %>
